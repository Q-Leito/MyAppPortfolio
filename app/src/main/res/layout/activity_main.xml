<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:paddingTop="48dp"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/mainTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/spotifyStreamerLabel"
        style="@style/OrangeButton"
        android:layout_below="@+id/titleView"
        android:layout_marginTop="24dp"
        android:text="@string/spotifyStreamerTitle"/>

    <Button
        android:id="@+id/scoresAppLabel"
        style="@style/OrangeButton"
        android:layout_below="@+id/spotifyStreamerLabel"
        android:text="@string/scoresAppTitle"/>

    <Button
        android:id="@+id/libraryAppLabel"
        style="@style/OrangeButton"
        android:layout_below="@+id/scoresAppLabel"
        android:text="@string/libraryAppTitle"/>

    <Button
        android:id="@+id/buildItBiggerLabel"
        style="@style/OrangeButton"
        android:layout_below="@+id/libraryAppLabel"
        android:text="@string/buildItBiggerTitle"/>

    <Button
        android:id="@+id/xyzReaderLabel"
        style="@style/OrangeButton"
        android:layout_below="@+id/buildItBiggerLabel"
        android:text="@string/xyzReaderTitle"/>

    <Button
        android:id="@+id/ownAppLabel"
        style="@style/RedButton"
        android:layout_below="@+id/xyzReaderLabel"
        android:text="@string/ownAppTitle"/>

</RelativeLayout>
